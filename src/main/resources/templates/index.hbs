<!DOCTYPE html>
<html>

<head>
	<!--Import materialize.css-->
	<link rel="stylesheet" href="/main.css"> 
    {{#if dark}}
	<link rel="stylesheet" href="/dark.css"> 
    {{/if}}
	<link rel="stylesheet" href="/scrollbar.css">
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

	{{#if dark == false}}
	<link rel="manifest" href="/manifest.json">
    {{/if}}
    {{#if dark}}
	<link rel="manifest" href="/manifest-dark.json">
    {{/if}}
	<!--Let browser know website is optimized for mobile-->
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

</head>

<body>

	{{{ header }}}

	<main>
		<div class="container">
			<div class="page-content">
				<h4>Terminal</h4>

				<div id="term" class="nano">
					<div id="term-content" class="nano-content"></div>
				</div>

				<form id="cmd_form">
					<div class="input-field col s12">
						<i class="material-icons prefix">chevron_right</i>
						<input id="cmd_box" autocapitalize="off" autocorrect="off" autocomplete="off" placeholder="Execute a command..." type="text"
							class="validate">
					</div>
				</form>
			</div>
			<div class="sidebar">
				<h4>Server Stats</h4>

				<h5>CPU Usage</h5>
				<p id="cpu-text">loading...</p>
				<progress id="cpu"></progress>

				<h5>RAM Usage</h5>
				<p id="ram-text">loading...</p>
				<progress id="ram"></progress>

				<h5>Server TPS</h5>
				<p id="tps-text">loading...</p>
				<progress id="tps"></progress>

			</div>
		</div>
	</main>


	<!-- Page Content goes here -->
	<footer class="page-footer">
		<div class="footer-copyright">
			<div class="container">
				Made by rymate1234
				<a class="grey-text text-lighten-4 right" href="#!">Server Version: {{version}}</a>
			</div>
		</div>
	</footer>

	<!--Import jQuery before materialize.js-->
	<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>

	<script type="text/javascript" src="/scrollbar.js"></script>
	<script type="text/javascript" src="/index.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/js/materialize.min.js"></script>


	<script>
    $(document).ready(function () {
        $(".button-collapse").sideNav();
    });
     if ('serviceWorker' in navigator) {
    navigator.serviceWorker
             .register('./service-worker.js')
             .then(function() { console.log('Service Worker Registered'); });
  }

</script>

</body>

</html>